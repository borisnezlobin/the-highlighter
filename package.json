{
  "name": "the-comment-highlighter",
  "displayName": "The Comment Highlighter",
  "version": "1.1.2",
  "publisher": "randomletters",
  "repository": {
    "type": "git",
    "url": "https://github.com/borisnezlobin/the-highlighter.git"
  },
  "description": "Highlight and style comments in your code with customizable prefixes like TODO, FIXME, and more. Perfect for organizing your code and staying on top of tasks. Fully customizable and easy to use!",
  "main": "src/extension.js",
  "icon": "logo-512.png",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Other",
    "Formatters",
    "Themes",
    "Visualization"
  ],
  "keywords": [
    "vscode",
    "extension",
    "todo",
    "fixme",
    "highlight",
    "prefix",
    "tags",
    "comments",
    "highlighting"
  ],
  "markdown": "standard",
  "activationEvents": [
    "*"
  ],
  "author": "Boris Nezlobin",
  "license": "MIT",
  "devDependencies": {
    "@types/vscode": "^1.1.37"
  },
  "contributes": {
    "configuration": {
      "title": "Comment Highlighter",
      "properties": {
        "theCommentHighlighter.userDefinedPrefixes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "prefix": {
                "type": "string"
              },
              "color": {
                "type": "string",
                "format": "color"
              },
              "backgroundColor": {
                "type": "string",
                "format": "color"
              },
              "fontWeight": {
                "type": "string",
                "enum": [
                  "normal",
                  "bold"
                ]
              },
              "fontStyle": {
                "type": "string",
                "enum": [
                  "normal",
                  "italic"
                ]
              },
              "textDecoration": {
                "type": "string",
                "enum": [
                  "none",
                  "underline",
                  "line-through",
                  "underline line-through"
                ]
              },
              "fontFamily": {
                "type": "string"
              }
            },
            "required": [
              "prefix",
              "color"
            ]
          },
          "default": [
            {
              "prefix": "todo",
              "color": "#a1fe00",
              "fontStyle": "italic"
            },
            {
              "prefix": "fixme",
              "color": "#ff5555",
              "backgroundColor": "#ff55551a",
              "fontWeight": "bold"
            },
            {
              "prefix": "idea",
              "color": "#ffb86c",
              "fontStyle": "italic",
              "textDecoration": "underline"
            },
            {
              "prefix": "hack",
              "backgroundColor": "#9000ff1d",
              "color": "#cb87ff",
              "fontStyle": "italic",
              "textDecoration": "underline"
            },
            {
              "prefix": "ignore",
              "color": "#ffffff54",
              "textDecoration": "line-through"
            },
            {
              "prefix": "note",
              "fontStyle": "italic",
              "color": "#ffffffa2"
            }, {
              "prefix": "======",
              "color": "#ffffff",
              "fontWeight": "bold",
              "fontStyle": "italic"
            }
          ],
          "description": "Custom prefixes to highlight in comments and style descriptions."
        }
      }
    }
  }
}
